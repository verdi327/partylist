<h1><%= @playlist.name %></h1>

<%= render :partial => "searches/form" %>

<div id="search_results"></div>

<h1>Songs</h1>
<% if @playlist.songs.empty? %>
  <h3>No Songs have been added yet!</h3>
<% else %>
<ul id="songs">
  <% @playlist.songs.each do |song| %>
    <li></li>
  <% end %>
</ul>
<% end %>

<% unless @playlist.songs.empty? %>
  <div id="player"></div>
<% end %>
